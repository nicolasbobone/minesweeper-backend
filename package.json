{
  "name": "minesweeper-backend",
  "version": "1.0.0",
  "description": "Minesweeper Backend",
  "main": "build/server.ts",
  "scripts": {
    "build": "tsc",
    "start": "npm run generate-docs && npm run migrate:prod && npm run build && node build/server.js",
    "dev": "npm run generate-docs && nodemon src/server.ts",
    "test": "jest",
    "prepare": "husky install",
    "lint": "eslint 'src/**/*.{js,ts}'",
    "lint:fix": "eslint 'src/**/*.{js,ts}' --fix",
    "prettier": "prettier --write 'src/**/*.{js,ts}'",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:prod": "npx prisma migrate deploy",
    "prisma-pull": "npx prisma db pull",
    "prisma-generate": "npx prisma generate",
    "generate-docs": "ts-node src/docs/generate-document.ts"
  },
  "author": "Nicol√°s Bobone",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "5.16.2",
    "bcryptjs": "2.4.3",
    "cookie-parser": "^1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.4.5",
    "express": "4.19.2",
    "jsonwebtoken": "9.0.2",
    "swagger-jsdoc": "6.2.8",
    "swagger-ui-express": "5.0.1",
    "zod": "^3.23.5",
    "zod-openapi": "^2.19.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.12",
    "@types/jsonwebtoken": "9.0.6",
    "@types/mongoose": "5.11.97",
    "@types/node": "20.14.2",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "7.16.0",
    "@typescript-eslint/parser": "7.16.0",
    "eslint": "8.57.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.1.3",
    "globals": "15.3.0",
    "husky": "8.0.0",
    "jest": "29.7.0",
    "lint-staged": "15.2.7",
    "nodemon": "3.1.3",
    "prettier": "3.3.2",
    "prisma": "5.16.2",
    "supertest": "7.0.0",
    "ts-jest": "29.1.4",
    "ts-node": "10.9.2"
  }
}
